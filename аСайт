          <button class="buy-button" data-product="–ü–æ–ª–Ω—ã–π 6-–æ–π —Å–µ—Ç '–°—Ç–∞–ª—å–Ω–æ–π —Ñ—Ä–æ–Ω—Ç'" data-price="110">–ö—É–ø–∏—Ç—å —Å–µ–π—á–∞—Å</button>
        </div>
      </div>
      
      <div class="product-card">
        <div class="product-image-container">
          <img src="https://cdn.payga.me/offers/49153/45181/70df6640f59e44ab9f981814c85a2cb8_Screenshot_20240207_153150_edit_5483_VYYAjkw.preview.jpg" 
               alt="–ú–∫ –≤—ã—Å—à–µ–≥–æ –∫–∞—á–µ—Å—Ç–≤–∞ Metro Royale" 
               class="product-image">
        </div>
        <div class="product-info">
          <h3 class="product-title">–ú–∫ –≤—ã—Å—à–µ–≥–æ –∫–∞—á–µ—Å—Ç–≤–∞</h3>
          <div class="product-price">35</div>
          <button class="buy-button" data-product="–ú–∫ –≤—ã—Å—à–µ–≥–æ –∫–∞—á–µ—Å—Ç–≤–∞" data-price="35">–ö—É–ø–∏—Ç—å —Å–µ–π—á–∞—Å</button>
        </div>
      </div>
    </div>
  </section>

  <script>
    // –•—Ä–∞–Ω–∏–ª–∏—â–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π (–≤ —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ —ç—Ç–æ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ)
    const usersDB = JSON.parse(localStorage.getItem('usersDB')) || [];
    let currentUser = JSON.parse(localStorage.getItem('currentUser')) || null;

    // DOM —ç–ª–µ–º–µ–Ω—Ç—ã
    const loginModal = document.getElementById('loginModal');
    const registerModal = document.getElementById('registerModal');
    const purchaseModal = document.getElementById('purchaseModal');
    const loginForm = document.getElementById('loginForm');
    const registerForm = document.getElementById('registerForm');
    const showLoginBtn = document.getElementById('showLoginBtn');
    const showRegisterBtn = document.getElementById('showRegisterBtn');
    const showLoginLink = document.getElementById('showLogin');
    const showRegisterLink = document.getElementById('showRegister');
    const loginClose = document.getElementById('loginClose');
    const registerClose = document.getElementById('registerClose');
    const purchaseClose = document.getElementById('purchaseClose');
    const authSection = document.getElementById('authSection');
    const userSection = document.getElementById('userSection');
    const userName = document.getElementById('userName');
    const userAvatar = document.getElementById('userAvatar');
    const logoutBtn = document.getElementById('logoutBtn');
    const buyButtons = document.querySelectorAll('.buy-button');
    const modalProductName = document.getElementById('modalProductName');
    const modalProductPrice = document.getElementById('modalProductPrice');
    const telegramBtn = document.getElementById('telegramBtn');
    const daBtn = document.getElementById('daBtn');
    const tryNowBtn = document.getElementById('tryNowBtn');

    // –ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä ID
    function generateId() {
      return Math.random().toString(36).substr(2, 9);
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
    function updateUI() {
      if (currentUser) {
        authSection.style.display = 'none';
        userSection.style.display = 'flex';
        userName.textContent = currentUser.name;
        userAvatar.textContent = currentUser.name.charAt(0).toUpperCase();
      } else {
        authSection.style.display = 'flex';
        userSection.style.display = 'none';
      }
    }

    // –ü—Ä–æ–≤–µ—Ä–∫–∞ email –Ω–∞ —É–Ω–∏–∫–∞–ª—å–Ω–æ—Å—Ç—å
    function isEmailUnique(email) {
      return !usersDB.some(user => user.email === email);
    }

    // –û—Ç–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω
    showLoginBtn.addEventListener('click', () => {
      loginModal.classList.add('active');
      document.body.style.overflow = 'hidden';
    });

    showRegisterBtn.addEventListener('click', () => {
      registerModal.classList.add('active');
      document.body.style.overflow = 'hidden';
    });

    showLoginLink.addEventListener('click', () => {
      registerModal.classList.remove('active');
      loginModal.classList.add('active');
    });

    showRegisterLink.addEventListener('click', () => {
      loginModal.classList.remove('active');
      registerModal.classList.add('active');
    });

    // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω
    loginClose.addEventListener('click', () => {
      loginModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    });

    registerClose.addEventListener('click', () => {
      registerModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    });

    purchaseClose.addEventListener('click', () => {
      purchaseModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    });

    // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
    [loginModal, registerModal, purchaseModal].forEach(modal => {
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
      });
    });

    // –§–æ—Ä–º–∞ –≤—Ö–æ–¥–∞
    loginForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const email = document.getElementById('loginEmail').value;
      const password = document.getElementById('loginPassword').value;
      const emailError = document.getElementById('loginEmailError');
      const passwordError = document.getElementById('loginPasswordError');
      
      // –°–±—Ä–æ—Å –æ—à–∏–±–æ–∫
      emailError.textContent = '';
      passwordError.textContent = '';
      
      // –ü–æ–∏—Å–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
      const user = usersDB.find(u => u.email === email);
      
      if (!user) {
        emailError.textContent = '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å —Ç–∞–∫–∏–º email –Ω–µ –Ω–∞–π–¥–µ–Ω';
        return;
      }
      
      if (user.password !== password) {
        passwordError.textContent = '–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å';
        return;
      }
      
      // –£—Å–ø–µ—à–Ω—ã–π –≤—Ö–æ–¥
      currentUser = user;
      localStorage.setItem('currentUser', JSON.stringify(currentUser));
      loginModal.classList.remove('active');
      document.body.style.overflow = 'auto';
      updateUI();
      
      // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
      loginForm.reset();
    });

    // –§–æ—Ä–º–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏
    registerForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const name = document.getElementById('registerName').value;
      const email = document.getElementById('registerEmail').value;
      const password = document.getElementById('registerPassword').value;
      const nameError = document.getElementById('registerNameError');
      const emailError = document.getElementById('registerEmailError');
      const passwordError = document.getElementById('registerPasswordError');
      
      // –°–±—Ä–æ—Å –æ—à–∏–±–æ–∫
      nameError.textContent = '';
      emailError.textContent = '';
      passwordError.textContent = '';
      
      // –í–∞–ª–∏–¥–∞—Ü–∏—è
      if (name.length < 2) {
        nameError.textContent = '–ò–º—è –¥–æ–ª–∂–Ω–æ —Å–æ–¥–µ—Ä–∂–∞—Ç—å –º–∏–Ω–∏–º—É–º 2 —Å–∏–º–≤–æ–ª–∞';
        return;
      }
      
      if (!isEmailUnique(email)) {
        emailError.textContent = '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å —Ç–∞–∫–∏–º email —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç';
        return;
      }
      
      if (password.length < 6) {
        passwordError.textContent = '–ü–∞—Ä–æ–ª—å –¥–æ–ª–∂–µ–Ω —Å–æ–¥–µ—Ä–∂–∞—Ç—å –º–∏–Ω–∏–º—É–º 6 —Å–∏–º–≤–æ–ª–æ–≤';
        return;
      }
      
      // –°–æ–∑–¥–∞–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
      const newUser = {
        id: generateId(),
        name,
        email,
        password,
        createdAt: new Date().toISOString()
      };
      
      usersDB.push(newUser);
      localStorage.setItem('usersDB', JSON.stringify(usersDB));
      
      // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –≤—Ö–æ–¥
      currentUser = newUser;
      localStorage.setItem('currentUser', JSON.stringify(currentUser));
      registerModal.classList.remove('active');
      document.body.style.overflow = 'auto';
      updateUI();
      
      // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
      registerForm.reset();
    });

    // –í—ã—Ö–æ–¥ –∏–∑ –∞–∫–∫–∞—É–Ω—Ç–∞
    logoutBtn.addEventListener('click', () => {
      currentUser = null;
      localStorage.removeItem('currentUser');
      updateUI();
    });

    // –ü–æ–∫—É–ø–∫–∞ —Ç–æ–≤–∞—Ä–∞
    buyButtons.forEach(button => {
      button.addEventListener('click', function() {
        if (!currentUser) {
          loginModal.classList.add('active');
          document.body.style.overflow = 'hidden';
          return;
        }
        
        const productName = this.getAttribute('data-product');
        const productPrice = this.getAttribute('data-price');
        
        modalProductName.textContent = productName;
        modalProductPrice.textContent = productPrice + ' ‚ÇΩ';
        
        purchaseModal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });

    // –ö–Ω–æ–ø–∫–∏ –æ–ø–ª–∞—Ç—ã
    telegramBtn.addEventListener('click', () => {
      window.open('https://t.me/Koooooo', '_blank');
    });

    daBtn.addEventListener('click', () => {
      const productName = document.getElementById('modalProductName').textContent;
      const productPrice = document.getElementById('modalProductPrice').textContent.match(/\d+/)[0];
      const message = encodeURIComponent(`–ü–æ–∫—É–ø–∫–∞: ${productName} (${productPrice}‚ÇΩ). –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å: ${currentUser.name} (${currentUser.email})`);
      window.open(`https://www.donationalerts.com/r/black_fire_channel?message=${message}`, '_blank');
    });

    // –ü–ª–∞–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª
    tryNowBtn.addEventListener('click', (e) => {
      e.preventDefault();
      const target = document.getElementById('products');
      window.scrollTo({
        top: target.offsetTop - 20,
        behavior: 'smooth'
      });
    });

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
    updateUI();
  </script>
</body>
</html> 
